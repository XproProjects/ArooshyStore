@model ArooshyStore.Models.ViewModels.CustomerSupplierViewModel
<link href="~/Areas/User/Content/ArooshyStoreCss/CustomerAccount/Login.css" rel="stylesheet" />
<input type="hidden" id="HiddenUserIdForResetPassword" value="@Model.CustomerSupplierId" />

<div class="page-wrapper">
    <div class="page-content">
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">Forgot Password</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i> Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Authentication</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Forgot Password</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!--end breadcrumb-->
        <!--start shop cart-->
        <section class="">
            <div class="container">
                <div class="authentication-forgot d-flex align-items-center justify-content-center my-5">
                    <div class="card forgot-box">
                        <div class="card-body">
                            <div class="p-4 rounded  border">
                                <div class="text-center">
                                    <img src="~/Areas/User/Content/images/icons/forgot-2.png" width="120" alt="" />
                                </div>
                                @using (Html.BeginForm("ForgotPassword", "CustomerAccount", FormMethod.Post, new { id = "forgotPasswordForm", enctype = "multipart/form-data", role = "form" }))
                                {
                                    <h4 class="mt-5 font-weight-bold">Forgot Password?</h4>
                                    <p class="">Enter your registered email ID to reset the password</p>
                                    <div class="form-group my-4">
                                        <label for="ForgotEmail">Enter your email to reset password</label>
                                        <input type="email" class="form-control" name="ForgotEmail" id="ForgotEmail" placeholder="Enter email">
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="submit" id="btnSubmitForgotPassword" class="btn btn-dark btn-lg">Send</button>
                                        <a href="@Url.Action("Login", "CustomerAccount")" class="btn btn-light btn-lg"><i class='bx bx-arrow-back me-1'></i>Back to Login</a>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script src="~/Areas/User/Script/ArooshyStoreScripts/CustomerAccount/Login.js=?4"></script>
