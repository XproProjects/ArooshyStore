<div class="page-wrapper">
    <div class="page-content">
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">Forgot Password</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i> Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Authentication</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Change Password</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>

        <section>

            <div class="container">
                <div class="authentication-reset-password d-flex align-items-center justify-content-center my-5">
                    <div class="row">
                        <div class="col-12 col-lg-10 mx-auto">
                            <div class="card">
                                <div class="row g-0">
                                    <div class="col-lg-12">
                                        @using (Html.BeginForm("ChangePassword", "CustomerAccount", FormMethod.Post, new { id = "userResetForm", enctype = "multipart/form-data", role = "form" }))
                                        {
                                            <div class="card-body">
                                                <div class="p-5">
                                                    <h4 class="font-weight-bold">Generate New Password</h4>
                                                    <p>We received your reset password request. Please enter your new password!</p>
                                                    <div class="mb-3 mt-5 form-group">
                                                        <label class="form-label" for="password">New Password</label>
                                                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter new password" required />
                                                        <span data-toggle="#password" id="eyeIcon" class="fal fa-fw fa-eye field-icon toggle-password" style="cursor:pointer;margin-right:10px;float:right;margin-top:-25px;"></span>
                                                    </div>
                                                    <div class="mb-3 form-group">
                                                        <label class="form-label" for="confirmPassword">Confirm Password</label>
                                                        <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm password" required />
                                                        <span data-toggle="#confirmPassword" id="eyeIcons" class="fal fa-fw fa-eye field-icon toggle-password" style="cursor:pointer;margin-right:10px;float:right;margin-top:-25px;"></span>
                                                    </div>
                                                    <div class="d-grid gap-2">
                                                        <button type="submit" id="btnSubmit" class="btn btn-dark">Change Password</button>
                                                        <a href="@Url.Action("Login", "CustomerAccount")" class="btn btn-light"><i class='bx bx-arrow-back me-1'></i>Back to Login</a>
                                                    </div>
                                                    <div class="text-center important" style="margin-top: 10px; color:red;"></div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="~/Areas/User/Scripts/ArooshyStoreScripts/CustomerAccount/ChangePassword.js"></script>
