@model ArooshyStore.Models.ViewModels.CustomerSupplierViewModel
<link href="~/Areas/User/Content/ArooshyStoreCss/CustomerAccount/Login.css" rel="stylesheet" />

<div class="page-wrapper">
    <div class="page-content">
        <!--start breadcrumb-->
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">Sign in</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i> Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Authentication</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Register</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!--end breadcrumb-->
        <!--start shop cart-->
        <section class="py-0 py-lg-5">
            <div class="container">
                <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5">
                    <div class="row">
                        <div class="col mx-auto">
                            <div class="card mb-0">
                                <div class="card-body">
                                    <div class="border p-4 rounded">
                                        <div class="text-center">
                                            <h3 class="">Sign Up</h3>
                                            <p>Already have an account? <a href="@Url.Action("Login", "CustomerAccount")">Sign in here</a></p>
                                        </div>

                                        <div class="login-separater text-center mb-4">
                                            <span>SIGN UP WITH EMAIL</span>
                                            <hr />
                                        </div>

                                        <div class="form-body">
                                            @using (Html.BeginForm("Register", "CustomerAccount", FormMethod.Post, new { id = "popupForm", enctype = "multipart/form-data", role = "form", @class = "row g-3" }))
                                            {
                                                <input type="hidden" id="CustomerSupplierType" name="CustomerSupplierType" value="Customer" />

                                                <div class="col-12">
                                                    <label for="inputFirstName" class="form-label">Full Name</label>
                                                    <input type="text" class="form-control" id="CustomerSupplierName" name="CustomerSupplierName" placeholder="John" required>
                                                </div>

                                                <div class="col-12">
                                                    <label for="Email" class="form-label">Email Address</label>
                                                    <input type="email" class="form-control" id="Email" name="Email" placeholder="example@user.com" required>
                                                </div>

                                                <div class="col-12">
                                                    <label for="Password" class="form-label">Password</label>
                                                    <div class="input-group" id="show_hide_password">
                                                        <input type="password" class="form-control border-end-0" id="Password" name="Password" placeholder="Enter Password" required>
                                                        <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" required>
                                                        <label class="form-check-label" for="flexSwitchCheckChecked">I read and agree to Terms & Conditions</label>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-dark"><i class='bx bx-user'></i> Sign up</button>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
            </div>
        </section>
        <!--end shop cart-->
    </div>
</div>

<script src="~/Areas/User/Script/ArooshyStoreScripts/CustomerAccount/Register.js"></script>
