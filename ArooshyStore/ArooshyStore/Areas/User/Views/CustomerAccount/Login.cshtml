@model ArooshyStore.Models.ViewModels.CustomerSupplierViewModel

<link href="~/Areas/User/Content/ArooshyStoreCss/CustomerAccount/Login.css" rel="stylesheet" />

<div class="page-wrapper">
    <div class="page-content">
        <!-- Start breadcrumb -->
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">Sign in</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i> Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Authentication</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Sign In</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <!-- End breadcrumb -->
        <!-- Start shop cart -->
        <section>
            <div class="container">
                <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5">
                    <div class="row row-cols-1 row-cols-xl-2">
                        <div class="col mx-auto">
                            <div class="card">
                                <div class="card-body">
                                    <div class="border p-4 rounded">
                                        <div class="text-center">
                                            <h3 class="">Sign in</h3>
                                            <p>
                                                Don't have an account yet? <a href="@Url.Action("Register", "CustomerAccount")">Sign up here</a>
                                            </p>
                                        </div>

                                        <div class="form-body">
                                            <!-- Login Form -->
                                            @using (Html.BeginForm("Login", "CustomerAccount", FormMethod.Post, new { id = "loginForm", enctype = "multipart/form-data", role = "form", @class = "row g-3" }))
                                            {
                                                <div class="col-12">
                                                    <label for="inputEmailAddress" class="form-label">Email Address</label>
                                                    <input type="email" class="form-control" name="Email" id="Email" placeholder="Email Address">
                                                </div>
                                                <div class="col-12">
                                                    <label for="inputChoosePassword" class="form-label">Enter Password</label>
                                                    <div class="input-group" id="show_hide_password">
                                                        <input type="password" class="form-control border-end-0" name="Password" id="Password" value="12345678" placeholder="Enter Password">
                                                        <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                                        <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 text-end">
                                                    <a href="javascript:;" class="text-primary" id="showForgotPassword">Forgot Password?</a>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button type="submit" class="btn btn-dark"><i class="bx bxs-lock-open"></i>Sign in</button>
                                                    </div>
                                                </div>
                                            }

                                            <!-- Forgot Password Form -->
                                            @using (Html.BeginForm("ForgotPassword", "CustomerAccount", FormMethod.Post, new { id = "forgotPasswordForm", enctype = "multipart/form-data", role = "form", @class = "hidden row g-3" })) // initially hidden
                                            {
                                                <h4 class="mt-5 font-weight-bold">Forgot Password?</h4>
                                                <p class="">Enter your registered email ID to reset the password</p>
                                                <div class="form-group my-4">
                                                    <label for="ForgotEmail">Enter your email to reset password</label>
                                                    <input type="email" class="form-control" name="ForgotEmail" id="ForgotEmail" placeholder="Enter email">
                                                </div>
                                                <div class="d-grid gap-2">
                                                    <button type="submit" id="btnSubmitForgotPassword" class="btn btn-dark btn-lg">Send</button>
                                                    <a href="javascript:;" class="btn btn-light btn-lg" id="backToLogin"><i class='bx bx-arrow-back me-1'></i>Back to Login</a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End row -->
                </div>
            </div>
        </section>
        <!-- End shop cart -->
    </div>
</div>

<script src="~/Areas/User/Script/ArooshyStoreScripts/CustomerAccount/Login.js=?4"></script>
<script>
    $(document).ready(function () {
        // Hide the forgot password form by default
        $('#forgotPasswordForm').hide();

        $('#showForgotPassword').click(function () {
            $('#loginForm').hide(); // Hide the login form
            $('#forgotPasswordForm').show(); // Show the forgot password form
        });

        $('#backToLogin').click(function () {
            $('#forgotPasswordForm').hide(); // Hide the forgot password form
            $('#loginForm').show(); // Show the login form
        });
    });
</script>
