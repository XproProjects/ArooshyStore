@using ArooshyStore.Models.ViewModels
@model List<ProductViewModel>

<section class="py-4">
    <div class="container">
        <div class="separator pb-4">
            <div class="line"></div>
            <h5 class="mb-0 fw-bold separator-title">FEATURED PRODUCTS</h5>
            <div class="line"></div>
        </div>
        <div class="product-grid">
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 row-cols-xxl-5 g-3 g-sm-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="position-relative overflow-hidden">
                                <div class="add-cart position-absolute top-0 end-0 mt-3 me-3">
                                    <a href="javascript:;"><i class="bx bx-cart-add"></i></a>
                                </div>
                                <div class="quick-view position-absolute start-0 bottom-0 end-0">
                                    <a href="#QuickViewProduct_@product.ProductId" data-bs-toggle="modal">Quick View</a>
                                </div>
                                <a href="@Url.Action("GetProductDetails", "Home", new { productId = product.ProductId })">
                                    <img src="@product.ImagePath" class="img-fluid" style="height: 200px; width: 100%; object-fit: cover;" alt="@product.ProductName">
                                </a>
                            </div>
                            <div class="card-body px-0">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <p class="mb-1 product-short-name">@product.CategoryName</p>
                                        <h6 class="mb-0 fw-bold product-short-title">@product.ProductName</h6>
                                    </div>
                                    <div class="icon-wishlist">
                                        <a href="javascript:;"><i class="bx bx-heart"></i></a>
                                    </div>
                                </div>
                                <div class="cursor-pointer rating mt-2">
                                    <i class="bx bxs-star text-warning"></i>
                                    <i class="bx bxs-star text-warning"></i>
                                    <i class="bx bxs-star text-warning"></i>
                                    <i class="bx bxs-star text-warning"></i>
                                    <i class="bx bxs-star text-warning"></i>
                                </div>

                                <div class="product-price d-flex align-items-center justify-content-start gap-2 mt-2">
                                    @if (product.SalePrice < product.CostPrice)
                                    {
                                        <div class="h6 fw-light fw-bold text-secondary text-decoration-line-through">$@product.CostPrice</div>
                                    }
                                    <div class="h6 fw-bold">$@product.SalePrice</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick View Modal -->
                    <div class="modal fade" id="QuickViewProduct_@product.ProductId" tabindex="-1" aria-labelledby="quickViewLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-xl modal-fullscreen-xl-down">
                            <div class="modal-content rounded-0 border-0">
                                <div class="modal-body">
                                    <button type="button" class="btn-close float-end" data-bs-dismiss="modal"></button>
                                    <div class="row g-0">
                                        <div class="col-12 col-lg-6">
                                            <div class="image-zoom-section">
                                                <div class="product-gallery owl-carousel owl-theme border mb-3 p-3" data-slider-id="1">
                                                    <div class="item">
                                                        <img src="@product.ImagePath" class="img-fluid" style="height: 300px; width: 100%; object-fit: cover;" alt="@product.ProductName">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <div class="product-info-section p-3">
                                                <h3 class="mt-3 mt-lg-0 mb-0">@product.ProductName</h3>
                                                <div class="product-rating d-flex align-items-center mt-2">
                                                    <div class="rates cursor-pointer font-13">
                                                        <i class="bx bxs-star text-warning"></i>
                                                        <i class="bx bxs-star text-warning"></i>
                                                        <i class="bx bxs-star text-warning"></i>
                                                        <i class="bx bxs-star text-warning"></i>
                                                        <i class="bx bxs-star text-warning"></i>
                                                    </div>
                                                    <div class="ms-1">
                                                        <p class="mb-0">(0 Ratings)</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex align-items-center mt-3 gap-2">
                                                    <h4 class="mb-0">$@product.SalePrice</h4>
                                                </div>
                                                <div class="mt-3">
                                                    <h6>Attributes:</h6>
                                                    <div class="color-indigators d-flex flex-column gap-2">
                                                        @if (product.AttributesList != null && product.AttributesList.Any())
                                                        {
                                                            foreach (var attribute in product.AttributesList)
                                                            {
                                                                <div>
                                                                    <strong>@attribute.AttributeName:</strong>
                                                                    <span>
                                                                        @string.Join(", ", attribute.AttributeDetails.Select(d => d.AttributeDetailName))
                                                                    </span>
                                                                </div>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span>No attributes available</span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2 mt-3">
                                                    <a href="javascript:;" class="btn btn-dark btn-ecomm">
                                                        <i class="bx bxs-cart-add"></i>Add to Cart
                                                    </a>
                                                    <a href="javascript:;" class="btn btn-light btn-ecomm">
                                                        <i class="bx bx-heart"></i>Add to Wishlist
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>

