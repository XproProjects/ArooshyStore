@model ArooshyStore.Models.ViewModels.AboutViewModel
<div class="page-wrapper">
    <div class="page-content">
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">About Us</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">
                                        <i class="bx bx-home-alt"></i> Home
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Pages</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">About Us</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
        <section class="py-0 py-lg-4">
            <div class="container">
                <h4>Our Story</h4>
                <p>@Model.Description</p>
            </div>
        </section>
        <section class="py-4">
            <div class="container">
                <h4>Why Choose Us</h4>
                <hr>
                <div class="row row-cols-1 row-cols-lg-3">
                    <div class="col d-flex">
                        <div class="card rounded-0 shadow-none w-100">
                            <div class="card-body">
                                <i class="@Model.Service1Icon" style="font-size: 60px;margin-bottom:10px;"></i>
                                <h5>@Model.Service1Name</h5>
                                <p>@Model.Service1Description</p>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex">
                        <div class="card rounded-0 shadow-none w-100">
                            <div class="card-body">
                                <i class="@Model.Service2Icon" style="font-size: 60px; margin-bottom: 10px;"></i>
                                <h5>@Model.Service2Name</h5>
                                <p>@Model.Service2Description</p>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex">
                        <div class="card rounded-0 shadow-none w-100">
                            <div class="card-body">
                                <i class="@Model.Service2Icon" style="font-size: 60px; margin-bottom: 10px;"></i>
                                <h5>@Model.Service2Name</h5>
                                <p>@Model.Service2Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </section>        
    </div>
</div>