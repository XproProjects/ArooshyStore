@model ArooshyStore.Models.ViewModels.AboutViewModel

<section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
    <div class="container">
        <div class="page-breadcrumb d-flex align-items-center">
            <h3 class="breadcrumb-title pe-3">About Us</h3>
            <div class="ms-auto">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="bx bx-home-alt"></i> Home</a></li>
                        <li class="breadcrumb-item"><a href="javascript:;">Pages</a></li>
                        <li class="breadcrumb-item active" aria-current="page">About Us</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<section class="py-0 py-lg-4">
    <div class="container">
        <h4>Our Story</h4>
        <p>@Model.Description</p>
        <div class="row">
            <div class="col-md-4">
                <div class="service-card">
                    <i class="@Model.Service1Icon"></i>
                    <h5>@Model.Service1Name</h5>
                    <p>@Model.Service1Description</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <i class="@Model.Service2Icon"></i>
                    <h5>@Model.Service2Name</h5>
                    <p>@Model.Service2Description</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card">
                    <i class="@Model.Service3Icon"></i>
                    <h5>@Model.Service3Name</h5>
                    <p>@Model.Service3Description</p>
                </div>
            </div>
        </div>
    </div>
</section>
