@using ArooshyStore.Models.ViewModels
@model ProductViewModel

<section class="product-tab-section section-padding bg-light">
    <div class="container">
        <div class="text-center pb-3">
            <h3 class="mb-0 h3 fw-bold">Latest Products</h3>
            <p class="mb-0 text-capitalize">The purpose of lorem ipsum</p>
        </div>
        <div class="row">
            <div class="col-auto mx-auto">
                <div class="product-tab-menu table-responsive">
                    <ul class="nav nav-pills flex-nowrap" id="pills-tab" role="tablist">
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            foreach (var category in Model.Categories.Take(4))
                            {
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link @(category == Model.Categories.First() ? "active" : "")"
                                            data-bs-toggle="pill"
                                            data-bs-target="#category-@category.CategoryId"
                                            type="button">
                                        @category.CategoryName
                                    </button>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>

        <hr>

        <div class="tab-content tabular-product">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                foreach (var category in Model.Categories.Take(4))
                {
                    <div class="tab-pane fade @(category == Model.Categories.First() ? "show active" : "")" id="category-@category.CategoryId">
                        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-4 row-cols-xxl-5 g-4">
                            @if (Model.Products != null && Model.Products.Any())
                            {
                                var productsInCategory = Model.Products.Where(p => p.CategoryId == category.CategoryId)
                                                                      .OrderByDescending(p => p.CreatedDate)
                                                                      .Take(10);
                                if (!productsInCategory.Any())
                                {
                                    <p class="text-center">No products available in this category.</p>
                                }
                                else
                                {
                                    foreach (var product in productsInCategory)
                                    {
                                        <div class="col">
                                            <div class="card">
                                                <div class="position-relative overflow-hidden">
                                                    <div class="product-options d-flex align-items-center justify-content-center gap-2 mx-auto position-absolute bottom-0 start-0 end-0">
                                                        <a href="javascript:;"><i class="bi bi-heart"></i></a>
                                                        <a href="javascript:;"><i class="bi bi-basket3"></i></a>
                                                        <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#QuickViewModal">
                                                            <i class="bi bi-zoom-in"></i>
                                                        </a>
                                                    </div>
                                                    <a href="product-details.html">
                                                        <img src="@product.ImagePath" class="card-img-top" alt="@product.ProductName">
                                                    </a>
                                                </div>
                                                <div class="card-body">
                                                    <div class="product-info text-center">
                                                        <h6 class="mb-1 fw-bold product-name">@product.ProductName</h6>
                                                        <p class="mb-0 h6 fw-bold product-price">$@product.SalePrice</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <p class="text-center">No products available in this category.</p>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
