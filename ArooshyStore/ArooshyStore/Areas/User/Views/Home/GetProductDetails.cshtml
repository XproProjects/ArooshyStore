@model ArooshyStore.Models.ViewModels.ProductViewModel

<div class="page-wrapper">
    <div class="page-content">
        <!-- Breadcrumb Section -->
        <section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
            <div class="container">
                <div class="page-breadcrumb d-flex align-items-center">
                    <h3 class="breadcrumb-title pe-3">@Model.ProductName</h3>
                    <div class="ms-auto">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i> Home</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="javascript:;">Shop</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Product Details</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </section>

        <!-- Product Detail Section -->
        <section class="py-4">
                <div class="product-detail-card">
                    <div class="product-detail-body">
                        <div class="row g-0">
                            <div class="col-12 col-lg-5">
                                <div class="image-zoom-section">
                                    <div class="product-gallery owl-carousel owl-theme border mb-3 p-3" data-slider-id="1">
                                        <img src="@Model.ImagePath" class="img-fluid"  alt="@Model.ProductName">
                                    </div>
                                    @*<div class="owl-thumbs d-flex justify-content-center" data-slider-id="1">
                                            <img src="@Model.ImagePath" class="img-fluid" alt="@Model.ProductName">
                                        </div>*@
                                </div>
                            </div>
                            <div class="col-12 col-lg-7">
                                <div class="product-info-section p-3">
                                    <h3 class="mt-3 mt-lg-0 mb-0">@Model.ProductName</h3>
                                    <div class="product-rating d-flex align-items-center mt-2">
                                        <div class="rates cursor-pointer font-13">

                                            <i class="bx bxs-star text-warning"></i>

                                            <i class="bx bxs-star text-light-4"></i>
                                        </div>
                                        <div class="ms-1">
                                            <p class="mb-0">Ratings</p>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center mt-3 gap-2">
                                        <h5 class="mb-0 text-decoration-line-through text-light-3">$@Model.CostPrice</h5>
                                        <h4 class="mb-0">$@Model.SalePrice</h4>
                                    </div>
                                    <div class="mt-3">
                                        <h6>Description:</h6>
                                        <p class="mb-0">  This is a great product that offers exceptional quality and value. It is perfect for those who are looking for reliability and performance. Whether you are using it for personal or professional purposes, this product will meet all your expectations and more.</p>
                                    </div>
                                    <div class="mt-3">
                                        <h6>Product ID:</h6>
                                        <p>#@Model.ProductId</p>

                                    </div>
                                    <div class="mt-3">
                                        <div class="col">
                                            <div class="col">
                                                <label class="form-label">Quantity</label>
                                                <select class="form-select form-select-sm">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <option>@i</option>
                                                    }
                                                </select>
                                            </div>

                                            <br />
                                            <div class="mt-3">
                                                <div class="attributes-list">
                                                    @if (Model.AttributesList != null && Model.AttributesList.Any())
                                                    {
                                                        foreach (var attribute in Model.AttributesList)
                                                        {
                                                            <div class="mb-2">
                                                                <h4>@attribute.AttributeName:</h4>
                                                                <strong>
                                                                    @string.Join(", ", attribute.AttributeDetails.Select(d => d.AttributeDetailName))
                                                                </strong>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span>No attributes available</span>
                                                    }
                                                </div>
                                            </div>

                                        </div>
                                        <div class="d-flex gap-2 mt-3">
                                            <a href="javascript:;" class="btn btn-dark btn-ecomm">
                                                <i class="bx bxs-cart-add"></i>Add to Cart
                                            </a>
                                            <a href="javascript:;" class="btn btn-light btn-ecomm">
                                                <i class="bx bx-heart"></i>Add to Wishlist
                                            </a>
                                        </div>
                                        <hr />
                                        <div class="product-sharing">
                                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                                <button type="button" class="btn-social bg-twitter"><i class='bx bxl-twitter'></i></button>
                                                <button type="button" class="btn-social bg-facebook"><i class='bx bxl-facebook'></i></button>
                                                <button type="button" class="btn-social bg-linkedin"><i class='bx bxl-linkedin'></i></button>
                                                <button type="button" class="btn-social bg-youtube"><i class='bx bxl-youtube'></i></button>
                                                <button type="button" class="btn-social bg-pinterest"><i class='bx bxl-pinterest'></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--end row-->
                        </div>
                    </div>
                </div>
        </section>
    </div>
</div>
