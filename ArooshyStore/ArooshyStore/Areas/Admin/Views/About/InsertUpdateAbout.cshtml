@using ArooshyStore.Models.ViewModels
@model AboutViewModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<link href="~/Areas/Admin/Content/fontawesomebrowser/fontawesome-iconpicker.min.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/fontawesomebrowser/font-awesome.min.css" rel="stylesheet" />
<div class="mySelect" style="overflow-x:hidden;margin-top:-20px;padding:0px">
    @using (Html.BeginForm("InsertUpdateAbout", "About", FormMethod.Post, new { id = "popupForm", @class = "smart-form custome-class-form", @novalidate = "novalidate", enctype = "multipart/form-data" }))
    {
        <fieldset style="padding:1.25rem;">
            <div class="row" style="margin-top:15px">
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Service 1 Name(*)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-info"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(a => a.Service1Name, new { @placeholder = "Service 1 Name", @class = "form-control" })
                        </div>
                    </div>
                </section>
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Service 1 icon (*)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i id="symbolIcon" class="fal fa-info"></i>
                                </span>
                            </div>
                            <input type="text" id="Service1Icon" name="Service1Icon" data-input-search="true" placeholder="Service1Icon" class="form-control iconpicker" value="@Model.Service1Icon" />
                        </div>
                    </div>
                </section>
                <section class="col-md-12">
                    <div style="padding:5px;padding-top:0px">
                        <label>Service 1 Description</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-pencil-alt"></i>
                                </span>
                            </div>
                            @Html.TextAreaFor(a => a.Service1Description, new { @placeholder = "Service 1 Description", @class = "form-control" })
                        </div>
                    </div>
                </section>
            </div>

            <div class="row">
                <div class="col-md-12" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Service 2 Name(*)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-info"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.Service2Name, new { @placeholder = "Service 2 Name", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px">
                                <label>Service 2 icon (*)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i id="symbolIcon" class="fal fa-info"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="Service2Icon" name="Service2Icon" data-input-search="true" placeholder="Service 2 Icon" class="form-control icp icp-auto" value="@Model.Service2Icon" />
                                </div>
                            </div>
                        </section>
                        <div class="col-md-12" style="margin-top:10px">
                            <div class="row">
                                <section class="col-md-12">
                                    <div style="padding:5px;padding-top:0px;">
                                        <label>Service 2 Description</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fal fa-pencil-alt"></i>
                                                </span>
                                            </div>
                                            @Html.TextAreaFor(a => a.Service2Description, new { @placeholder = "Service 2 Description", @class = "form-control" })
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Service 3 Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-info"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.Service3Name, new { @placeholder = "Service 3 Name", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px">
                                <label>Service 3 icon (*)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i id="symbolIcon" class="fal fa-info"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="Service3Icon" name="Service3Icon" data-input-search="true" placeholder="Service 3 Icon" class="form-control icp icp-auto" value="@Model.Service3Icon" />
                                </div>
                            </div>
                        </section>
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Service 3 Description</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-pencil-alt"></i>
                                        </span>
                                    </div>
                                    @Html.TextAreaFor(a => a.Service3Description, new { @placeholder = "Service 3 Description", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top: 10px">
                <section class="col-md-12">
                    <div style="padding:5px;padding-top:0px">
                        <label>Description (*)</label>
                        <input type="hidden" id="AboutId" name="AboutId" value="@Model.AboutId" />
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-random"></i>
                                </span>
                            </div>
                            @Html.TextAreaFor(a => a.Description, new { @placeholder = "Description", @class = "form-control" })
                        </div>
                    </div>
                </section>

            </div>



        </fieldset>
        <footer class="modal-footer" style="margin-top:11px;background-color:#F9F9F9;border-top:1px solid #ddd">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" id="btn_Save" class="btn btn-primary btnSaveForm">Save</button>
        </footer>

    }
</div>
<script src="~/Areas/Admin/Scripts/app.bundle.js"></script>
<script src="~/Areas/Admin/Scripts/fontawesomebrowser/fontawesome-iconpicker.min.js"></script>
<script src="~/Areas/Admin/Scripts/ArooshyStoreScripts/About/InsertUpdateAbout.js?v=2"></script>
<script>
    $('.iconpicker').iconpicker({
        title: 'Icon Picker',
        selected: false,
        defaultValue: false,
        placement: "bottom",
        collision: "none",
        animation: true,
        hideOnSelect: true,
        showFooter: true,
        searchInFooter: false,
        mustAccept: false,
        selectedCustomClass: "bg-primary",
        fullClassFormatter: function (e) {
            return e;
        },
        input: "input,.iconpicker-input",
        inputSearch: false,
        container: false,
        component: ".input-group-addon,.iconpicker-component",
        templates: {
            popover: '<div class="iconpicker-popover popover" role="tooltip"><div class="arrow"></div>' + '<div class="popover-title"></div><div class="popover-content"></div></div>',
            footer: '<div class="popover-footer"></div>',
            buttons: '<button class="iconpicker-btn iconpicker-btn-cancel btn btn-default btn-sm">Cancel</button>' + ' <button class="iconpicker-btn iconpicker-btn-accept btn btn-primary btn-sm">Accept</button>',
            search: '<input type="search" class="form-control iconpicker-search" placeholder="Type to filter" />',
            iconpicker: '<div class="iconpicker"><div class="iconpicker-items"></div></div>',
            iconpickerItem: '<a role="button" href="javascript:;" class="iconpicker-item"><i></i></a>'
        }
    });
</script>
