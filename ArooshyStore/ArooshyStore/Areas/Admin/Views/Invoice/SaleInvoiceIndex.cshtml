﻿@{
    ViewBag.Title = "Sale Invoice";
}
@using ArooshyStore.Models.ViewModels
@model List<ModuleViewModel>
<!-- END Page Header -->
<!-- BEGIN Page Content -->
<input type="hidden" id="From" value="@ViewBag.From" />
<main id="js-page-content" role="main" class="page-content">
    <div class="row">
        <div class="col-md-12" style="display:flex">
            <table style="width:100%">
                <tr>
                    <th>
                        <ol class="breadcrumb breadcrumb-sm breadcrumb-arrow">
                            <li>
                                <a href="javascript:void(0)">
                                    <i class="fal fa-clipboard"></i>
                                    &nbsp;
                                    <span class="hidden-md-down">Sale Invoice</span>
                                </a>
                            </li>
                            <li class="">
                                <a href="javascript:void(0)">
                                    <i class="fal fa-list-ol"></i>
                                    &nbsp;
                                    <span class="hidden-md-down">Sale Invoices List</span>
                                </a>
                            </li>
                        </ol>
                    </th>
                    <th style="text-align:right">
                        <h6 class="js-get-date" style="margin-top: -7px;"></h6>
                    </th>
                </tr>
            </table>

        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-hdr bg-primary-500 bg-info-gradient" role="heading">
                    <h2>Sale Invoices List</h2>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="row" style="padding-left: 0px;padding-right: 0px;padding-top:0px">
                            <div class="col-lg-5" style="margin-top:4px">
                                @if (Model.Any(x => x.ActionName.ToLower() == "create") && ViewBag.From.ToLower() == "all")
                                {
                                    <a href="javascript:void(0)" data-value="0" class="btn btn-outline-primary waves-effect waves-themed btnNew AddEditRecord btnOpenModal btnAddEdit" id="AddEditRecord">
                                        <i class="fal fa-plus-circle"></i>
                                        &nbsp;
                                        New Sale Invoice
                                    </a>
                                }
                                @if (Model.Any(x => x.ActionName.ToLower() == "update"))
                                {
                                    <input type="hidden" id="EditActionRole" value="1" />
                                }
                                else
                                {
                                    <input type="hidden" id="EditActionRole" value="0" />
                                }
                                @if (Model.Any(x => x.ActionName.ToLower() == "delete"))
                                {
                                    <input type="hidden" id="DeleteActionRole" value="1" />
                                }
                                else
                                {
                                    <input type="hidden" id="DeleteActionRole" value="0" />
                                }
                                @if (Model.Any(x => x.ActionName.ToLower() == "exchange"))
                                {
                                    <input type="hidden" id="ExchangeActionRole" value="1" />
                                }
                                else
                                {
                                    <input type="hidden" id="ExchangeActionRole" value="0" />
                                }
                                @if (Model.Any(x => x.ActionName.ToLower() == "return"))
                                {
                                    <input type="hidden" id="ReturnActionRole" value="1" />
                                }
                                else
                                {
                                    <input type="hidden" id="ReturnActionRole" value="0" />
                                }
                            </div>
                            <div class="col-lg-7" style="margin-top:4px">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <button id="btnSearchJobType" class="btn btn-outline-default dropdown-toggle btnSearchGo" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Invoice Number</button>
                                        <div class="dropdown-menu" id="ulSearchJobType">
                                            <a class="dropdown-item" href="#">Invoice Number</a>
                                        </div>
                                    </div>
                                    <input type="text" id="txtSearch" class="form-control" placeholder="Search here..." aria-label="Text input with dropdown button">
                                    <div class="input-group-append">
                                        <button id="btnSearch" class="btn btn-outline-default btnSearchGo" type="button" aria-haspopup="true" aria-expanded="false">Go</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel FiltersPanel panel-locked panel-collapsed" style="margin-top:15px;background-color:#FDFDFD;border: 2px solid #ddd;cursor:pointer !important">
                            <div class="panel-hdr color-success-600 myFilterPanel" title="Click to Expand/Collapase Advance Filters" style="background-color:#FDFDFD;cursor:pointer !important" data-action="panel-collapse">
                                <h2>
                                    <span>
                                        <i class="fal fa-search"></i>
                                        &nbsp;
                                        More Filters
                                    </span>
                                </h2>
                                <div class="panel-toolbar myToolbar" style="margin-right:15px">
                                    <button class="btn btn-panel waves-effect waves-themed" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                                </div>
                            </div>
                            <div class="panel-container collapse" style="">
                                <div class="panel-content">
                                    <div class="row" style="margin-top:15px">
                                        <section class="col-md-8">
                                            <div class="frame-wrap">
                                                <div class="custom-control custom-radio custom-control-inline" style="margin-top:5px">
                                                    <input type="radio" class="custom-control-input" id="DateRadio" value="Date" name="MoreFilterRadio" checked />
                                                    <label class="custom-control-label" for="DateRadio">Date</label>
                                                </div>
                                                <div class="custom-control custom-radio custom-control-inline" style="margin-top:5px;margin-left:10px">
                                                    <input type="radio" class="custom-control-input" id="Month" value="Month" name="MoreFilterRadio" />
                                                    <label class="custom-control-label" for="Month">Month</label>
                                                </div>
                                                <div class="custom-control custom-radio custom-control-inline" style="margin-top:5px;margin-left:10px">
                                                    <input type="radio" class="custom-control-input" id="BetweenDates" value="Between Dates" name="MoreFilterRadio" />
                                                    <label class="custom-control-label" for="BetweenDates">Between Dates</label>
                                                </div>
                                                <div class="custom-control custom-radio custom-control-inline" style="margin-top:5px;margin-left:10px">
                                                    <input type="radio" class="custom-control-input" id="All" value="All" name="MoreFilterRadio" />
                                                    <label class="custom-control-label" for="All">All</label>
                                                </div>
                                            </div>
                                        </section>

                                    </div>
                                    <div class="row" style="margin-top:25px">
                                        <section class="col-md-6 DateDiv">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <input type="date" class="form-control" id="DateFilter" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                            </div>
                                        </section>
                                        <section class="col-md-6 MonthDiv" hidden>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <input type="month" class="form-control" id="MonthFilter" value="@DateTime.Now.ToString("yyyy-MM")" />
                                            </div>
                                        </section>
                                        <section class="col-md-4 BetweenDatesDiv" hidden>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <input type="date" class="form-control" id="FromDateFilter" value="@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")" />
                                            </div>
                                        </section>
                                        <section class="col-md-4 BetweenDatesDiv" hidden>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="fas fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <input type="date" class="form-control" id="ToDateFilter" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                            </div>
                                        </section>
                                        <section class="col-md-4 pull-right">
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table id="myTable" class="table table-bordered table-hover table-striped w-100" style="margin-top: -31px !important;">
                            <thead>
                                <tr>
                                    <th class="min-mobile">Invoice #</th>
                                    <th class="min-tablet">Invoice Date</th>
                                    <th class="min-desktop">Customer</th>
                                    <th class="min-desktop">Status</th>
                                    <th class="min-tablet">Total Items</th>
                                    <th class="min-tablet">Net Amount</th>
                                    <th class="none">Gross Amount</th>
                                    <th class="none">Discount Type</th>
                                    <th class="none">Discount Rate</th>
                                    <th class="none">Discount Amount</th>
                                    <th class="none">Delivery Charges</th>
                                    <th class="none">Created Date</th>
                                    <th class="none">Created By</th>
                                    <th class="none">Updated Date</th>
                                    <th class="none">Updated By</th>
                                    <th class="min-mobile">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            @*<tfoot>
                                </tfoot>*@
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
<!-- this overlay is activated only when mobile menu is triggered -->
<script src="~/Areas/Admin/Scripts/ArooshyStoreScripts/Invoice/SaleInvoiceIndex.js?v=4"></script>