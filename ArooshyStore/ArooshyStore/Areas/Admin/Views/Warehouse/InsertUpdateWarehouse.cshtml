@using ArooshyStore.Models.ViewModels
@model WarehouseViewModel
<div class="mySelect" style="overflow-x:hidden;margin-top:-20px;padding:0px">
    @using (Html.BeginForm("InsertUpdateWarehouse", "Warehouse", FormMethod.Post, new { id = "popupForm", @class = "smart-form custome-class-form", @novalidate = "novalidate", enctype = "multipart/form-data" }))
    {
        <fieldset style="padding:1.25rem;">
            <div class="row" style="margin-top:15px">
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Warehouse Name (*)</label>
                        <input type="hidden" id="WarehouseId" name="WarehouseId" value="@Model.WarehouseId" />
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-random"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(a => a.WarehouseName, new { @placeholder = "Warehouse Name", @class = "form-control" })
                        </div>
                    </div>
                </section>
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Email</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-envelope"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(a => a.Email, new { @placeholder = "Email", @class = "form-control" })
                        </div>
                    </div>
                </section>
            </div>

            <div class="row" style="margin-top: 10px">
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Contact 1(*)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-phone"></i>
                                </span>
                            </div>
                            <input type="text" placeholder="03XX-XXXXXXX" id="Contact1" name="Contact1" value="@Model.Contact1" data-inputmask="'mask': '9999-9999999'" class="form-control">
                        </div>
                    </div>
                </section>
                <section class="col-md-6">
                    <div style="padding:5px;padding-top:0px">
                        <label>Contact 2</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-phone"></i>
                                </span>
                            </div>
                            <input type="text" placeholder="03XX-XXXXXXX" id="Contact2" name="Contact2" value="@Model.Contact2" data-inputmask="'mask': '9999-9999999'" class="form-control">
                        </div>
                    </div>
                </section>
            </div>
            <div class="row">
                <div class="col-md-12" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Address</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-map-marker"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.Address, new { @placeholder = "Address", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            @{
                string ishidden = "hidden";
                string ischecked = "";
                if (Model.WarehouseId > 0)
                {
                    ishidden = "";
                    if (Model.Status == true)
                    {
                        ischecked = "checked";
                    }
                }
            }
            <div class="row" style="margin-top: 10px" @ishidden>
                <section class="col-md-12">
                    <div class="custom-control custom-switch  pull-right" style="margin-right:7px;">
                        <input type="checkbox" class="custom-control-input" name="Status" id="Status" @ischecked>
                        <label class="custom-control-label" for="Status">Active</label>
                    </div>
                </section>
            </div>

           

        </fieldset>
        <footer class="modal-footer" style="margin-top:11px;background-color:#F9F9F9;border-top:1px solid #ddd">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" id="btn_Save" class="btn btn-primary btnSaveForm">Save</button>
        </footer>

    }
</div>
<script src="~/Areas/Admin/Scripts/app.bundle.js"></script>
<script src="~/Areas/Admin/Scripts/ArooshyStoreScripts/Warehouse/InsertUpdateWarehouse.js?v=2"></script>