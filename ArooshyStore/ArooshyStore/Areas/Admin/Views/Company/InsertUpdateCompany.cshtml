<link href="~/Content/ArooshyStoreCss/User/InsertUpdateUser.css" rel="stylesheet" />
@using ArooshyStore.Models.ViewModels
@model CompanyViewModel

<div class="mySelect" style="overflow-x:hidden;margin-top:-20px;padding:0px">
    @using (Html.BeginForm("InsertUpdateCompany", "Company", FormMethod.Post, new { id = "popupForm", @class = "smart-form custome-class-form", @novalidate = "novalidate", enctype = "multipart/form-data" }))
    {
        <fieldset style="padding:1.25rem;">
            <div class="row">
                <div class="col-md-4" style="padding: 18px;padding-top:0px;padding-bottom:0px">
                    <div class="myDiv">
                        <img id="DocumentImage" src="@Model.ImagePath" style="margin-top: 28px;height: 190px;width:100%;border-top-left-radius: 5px;border-top-right-radius: 5px;" />
                        <a href="javascript:void(0)" title="Delete this Picture" data-value="0" style="background-color: #FD1381; font-size: 14px; border-radius: 50%; font-weight: bold; padding: 5px; color: #fff; padding-left: 9px; padding-right: 9px; position: absolute; right: 35px; top: 33px;display: none;" class="deleteImage DeleteImage">X</a>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ProfileImage">
                        <label class="custom-file-label" id="AttachDocument" for="ProfileImage" style="overflow:hidden">Choose Picture...</label>
                    </div>
                </div>
                <div class="col-md-8" style="margin-top:23px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:10px">
                                <label>Company Name (*)</label>
                                <input type="hidden" id="CompanyId" name="CompanyId" value="@Model.CompanyId" />
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-building"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.CompanyName, new { @placeholder = "Company Name", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px">
                                <label>Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-envelope"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.Email, new { @placeholder = "Email", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>

                    <div class="row" style="margin-top: 10px">
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px">
                                <label>Contact 1 (*)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-phone"></i>
                                        </span>
                                    </div>
                                    <input type="text" placeholder="03XX-XXXXXXX" id="Contact1" name="Contact1" value="@Model.Contact1" data-inputmask="'mask': '9999-9999999'" class="form-control">
                                </div>
                            </div>
                        </section>
                        <section class="col-md-6">
                            <div style="padding:5px;padding-top:0px">
                                <label>Contact 2</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-phone"></i>
                                        </span>
                                    </div>
                                    <input type="text" placeholder="03XX-XXXXXXX" id="Contact2" name="Contact2" value="@Model.Contact2" data-inputmask="'mask': '9999-9999999'" class="form-control">
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-4" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Facebook</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-random"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.FacebookId, new { @placeholder = "Facebook", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="col-md-4" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Instagram</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-random"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.InstagramId, new { @placeholder = "Instagram", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="col-md-4" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Youtube</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-random"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.LinkedInId, new { @placeholder = "Youtube", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="margin-top:10px">
                    <div class="row">
                        <section class="col-md-12">
                            <div style="padding:5px;padding-top:0px;">
                                <label>Address</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fal fa-map-marker"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(a => a.Address, new { @placeholder = "Address", @class = "form-control" })
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>





        </fieldset>
        <footer class="modal-footer" style="margin-top:11px;background-color:#F9F9F9;border-top:1px solid #ddd">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" id="btn_Save" class="btn btn-primary btnSaveForm">Save</button>
        </footer>
    }
</div>
<script src="~/Areas/Admin/Scripts/app.bundle.js"></script>
<script src="~/Areas/Admin/Scripts/ArooshyStoreScripts/Company/InsertUpdateCompany.js?v=1"></script>
