@using ArooshyStore.Models.ViewModels
@model AttributeViewModel

<style>
    .form-control-error {
        border-color: #A90329;
        background-color: #FFF0F0;
    }

    .btn-custom {
        border-radius: 5px;
        padding: 9px 19px;
        background-color: #838383;
        border-color: #838383 !important;
    }

        .btn-custom.cancel {
            color: black;
            background-color: #838383;
        }

        .btn-custom.save {
            color: white;
        }
</style>

<div class="mySelect" style="overflow-x:hidden;margin-top:-20px;padding:0px">
    @using (Html.BeginForm("InsertUpdateAttribute", "Attribute", FormMethod.Post, new { id = "popupForm", @class = "smart-form custome-class-form", @novalidate = "novalidate", enctype = "multipart/form-data" }))
    {
        <fieldset style="padding:1.25rem;">
            <div class="row" style="margin-top: 25px;">
                <section class="col-md-12">
                    <div style="padding:5px;padding-top:0px">
                        <label>Attribute Name (*)</label>
                        <input type="hidden" id="AttributeId" name="AttributeId" value="@Model.AttributeId" />

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fal fa-random"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(a => a.AttributeName, new { @placeholder = "Attribute Name", @class = "form-control" })
                        </div>
                    </div>
                </section>
            </div>


            @{
                string ishidden = Model.AttributeId > 0 ? "" : "hidden";
                string ischecked = Model.Status == true ? "checked" : "";
            }
            <div class="row" @ishidden style="margin-top:10px">
                <section class="col-md-12">
                    <div class="custom-control custom-switch  pull-right">
                        <input type="checkbox" class="custom-control-input" name="Status" id="Status" @ischecked>
                        <label class="custom-control-label" for="Status">Active</label>
                    </div>
                </section>
            </div>
        </fieldset>
        <footer class="modal-footer" style="margin-top:11px;background-color:#F9F9F9;border-top:1px solid #ddd">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" id="btn_Save" class="btn btn-primary btnSaveForm">Save</button>
        </footer>
    }
</div>

<script src="~/Areas/Admin/Scripts/app.bundle.js"></script>
<script src="~/Areas/Admin/Scripts/ArooshyStoreScripts/Attribute/InsertUpdateAttribute.js?v=1"></script>

